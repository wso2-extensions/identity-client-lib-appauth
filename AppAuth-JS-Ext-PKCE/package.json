{
  "name": "@wso2/appauth-ext-pkce",
  "version": "0.0.1",
  "description": "A general purpose OAuth extension client for AppAuth PKCE.",
  "author": "WSO2",
  "license": "Apache-2.0",
  "repository": "identity-client-lib-appauth/AppAuth-JS-Ext-PKCE/",
  "bugs": {
    "url": "https://github.com/wso2-extensions/identity-client-lib-appauth/issues"
  },
  "files": [
    "src/**",
    "app/**",
    "built/**"
  ],
  "main": "built/app/index.js",
  "types": "built/app/index.d.ts",
  "scripts": {
    "preapp": "npm run-script --silent watch",
    "app": "node_modules/.bin/watchify built/app/index.js -o built/app/appauth_js_ext_pkce.js & http-server -p 8000",
    "prenode-app": "npm run-script --silent compile",
    "node-app": "node ./built/node_app/index.js",
    "prebuild-app": "npm run-script --silent compile",
    "build-app": "node_modules/.bin/browserify built/app/index.js -o built/app/appauth_js_ext_pkce.js",
    "preminify": "npm run-script --silent build-app",
    "minify": "java -jar node_modules/google-closure-compiler/compiler.jar --js built/app/appauth_js_ext_pkce.js --js_output_file built/app/appauth_js_ext_pkce_minified.js",
    "precompile": "npm run-script --silent clean && npm run-script --silent format",
    "compile": "node_modules/.bin/tsc",
    "prepare": "npm run-script --silent build-app",
    "format": "node_modules/.bin/clang-format -i -style=file --glob=src/**.ts",
    "clean": "rm -rf built",
    "pretest": "npm run-script --silent compile",
    "test": "node_modules/.bin/karma start karma.conf --browsers=Chrome --single-run=false --debug",
    "pregzipSize": "npm run-script --silent minify",
    "gzipSize": "gzip -c built/app/appauth_js_ext_pkce_minified.js | wc -c",
    "prewatch": "npm run-script --silent format",
    "watch": "node_modules/.bin/tsc --watch &"
  },
  "keywords": [
    "OAuth",
    "AppAuth",
    "JavaScript",
    "Node"
  ],
  "devDependencies": {
    "@types/form-data": "2.2.1",
    "@types/hapi": "^17.0.12",
    "@types/jasmine": "^2.8.8",
    "@types/node": "^10.3.2",
    "@types/opener": "^1.4.0",
    "@types/react": "^16.3.17",
    "@types/react-dom": "^16.0.6",
    "browserify": "^16.2.2",
    "clang-format": "^1.2.3",
    "google-closure-compiler": "^20180506.0.0",
    "http-server": "^0.11.1",
    "jasmine-core": "^3.1.0",
    "karma": "^2.0.2",
    "karma-browserify": "^5.2.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-jasmine": "^1.1.2",
    "typescript": "^2.9.1",
    "watchify": "^3.11.0"
  },
  "dependencies": {
    "@openid/appauth": "github:wso2-extensions/identity-client-lib-appauth/AppAuth-JS",
    "@types/jquery": "^3.3.2",
    "follow-redirects": "^1.5.1",
    "form-data": "^2.3.2",
    "js-sha256": "^0.9.0",
    "opener": "^1.4.3"
  }
}
